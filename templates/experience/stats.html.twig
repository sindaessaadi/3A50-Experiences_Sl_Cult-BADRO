{% extends 'base.html.twig' %}

{% block title %}Experience Statistics{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Experience Statistics Based on Evaluation</h1>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Evaluation</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                {% for evaluation, count in counts %}
                    <tr>
                        <td>
                            {# Display stars based on evaluation value (1 to 5 stars) #}
                            {% for i in 1..5 %}
                                {% if i <= evaluation %}
                                    <span class="star">&#9733;</span>  {# Full star #}
                                {% else %}
                                    <span class="star">&#9734;</span>  {# Empty star #}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ count }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            margin-top: 30px;
        }

        h1 {
            color: #4CAF50;
            font-family: 'Arial', sans-serif;
            margin-bottom: 30px;
        }

        table {
            width: 60%;
            margin: 0 auto;
            border-collapse: collapse;
        }

        th, td {
            text-align: center;
            padding: 12px;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        .star {
            font-size: 20px;
            color: #FFD700; /* Gold color for the stars */
        }
    </style>
{% endblock %}
