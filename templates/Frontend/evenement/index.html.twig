{% extends 'base.html.twig' %}
{% block page_title %}Event List{% endblock %}
{% block breadcrumb %}Events{% endblock %}

{% block body %}
    <style>
        /* Card Container */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
        }

        /* Card Style */
        .card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: calc(33.333% - 20px); /* 3 cards per row */
            padding: 20px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card h3 {
            margin-top: 0;
            font-size: 1.5rem;
            color: #333;
        }

        .card p {
            margin: 10px 0;
            color: #666;
        }

        .card .badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 0.9rem;
        }

        .card .badge.bg-success {
            background-color: #28a745;
            color: #fff;
        }

        .card .badge.bg-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .card .badge.bg-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .card .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .card .action-buttons a {
            padding: 8px 12px;
            font-size: 0.9rem;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.2s;
        }

        .card .action-buttons a.btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .card .action-buttons a.btn-primary:hover {
            background-color: #0056b3;
        }

        .card .action-buttons a.btn-warning {
            background-color: #ffc107;
            color: #000;
        }

        .card .action-buttons a.btn-warning:hover {
            background-color: #e0a800;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .card {
                width: calc(50% - 20px); /* 2 cards per row */
            }
        }

        @media (max-width: 768px) {
            .card {
                width: 100%; /* 1 card per row */
            }
        }
    </style>
    
    
    <h1 class="event-title">Event List</h1>

    <div class="card-container">
        {% for evenement in evenements %}
            <div class="card">
                <h3>{{ evenement.titre }}</h3>
                <p><strong>Description:</strong> {{ evenement.description }}</p>
                <p><strong>Date:</strong> {{ evenement.date ? evenement.date|date('Y-m-d') : 'N/A' }}</p>
                <p><strong>Time:</strong> {{ evenement.heure ? evenement.heure|date('H:i') : 'N/A' }}</p>
                <p><strong>Location:</strong> {{ evenement.lieu }}</p>
                <p><strong>Type:</strong> {{ evenement.type }}</p>
                <p><strong>Organizer:</strong> {{ evenement.organisateurNom }}</p>
                <p><strong>Max Participants:</strong> {{ evenement.nombreMaxParticipants }}</p>
                <p><strong>Status:</strong> 
                    {% if evenement.status == 'Active' %}
                        <span class="badge bg-success">Active</span>
                    {% else %}
                        <span class="badge bg-secondary">Inactive</span>
                    {% endif %}
                </p>
                <p><strong>Ticket Price:</strong> {{ evenement.ticketPrix }} TND</p>
                <p><strong>Inscription Deadline:</strong> {{ evenement.periodeInscriptionFin ? evenement.periodeInscriptionFin|date('Y-m-d') : 'N/A' }}</p>
                <div class="action-buttons">
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-primary">View</a>
                    {% if evenement.nombreMaxParticipants > 0 %}
                        <a href="{{ path('participation_buy', {'id': evenement.id}) }}" class="btn btn-warning">Buy Ticket</a>
                    {% else %}
                        <span class="badge bg-danger">Sold Out</span>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <p class="text-center text-muted">No events found</p>
        {% endfor %}
    </div>
{% endblock %}
