{% extends 'dashboard.html.twig' %}
{% block page_title %}Event Details{% endblock %}
{% block breadcrumb %}Events{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-center" style="color: #0056b3;">Evenement Details</h1>

        <div class="event-details-card p-4" style="background-color: #003366; border-radius: 8px; color: white;">
            <table class="table table-borderless text-white">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ evenement.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ evenement.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ evenement.description }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Heure</th>
                        <td>{{ evenement.heure ? evenement.heure|date('H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Lieu</th>
                        <td>{{ evenement.lieu }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ evenement.type }}</td>
                    </tr>
                    <tr>
                        <th>Organisateur</th>
                        <td>{{ evenement.organisateurNom }}</td>
                    </tr>
                    <tr>
                        <th>Max Participants</th>
                        <td>{{ evenement.nombreMaxParticipants }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ evenement.status }}</td>
                    </tr>
                    <tr>
                        <th>Ticket Price</th>
                        <td>{{ evenement.ticketPrix }}</td>
                    </tr>
                    <tr>
                        <th>Inscription Deadline</th>
                        <td>{{ evenement.periodeInscriptionFin }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary btn-sm">Back to List</a>
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">Edit</a>
        </div>
    </div>

    {# Custom Styles #}
    <style>
        /* General Styles */
        .container {
            margin-top: 20px;
        }

        .event-details-card {
            background-color: #003366;
            border-radius: 8px;
            padding: 20px;
        }

        table th, table td {
            color: white;
            padding: 10px 15px;
        }

        table th {
            width: 150px;
            text-align: left;
            font-weight: bold;
        }

        table td {
            word-wrap: break-word;
        }

        .btn {
            padding: 8px 20px;
            font-size: 0.9rem;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #343a40;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

        h1 {
            color: #0056b3;
        }
    </style>
{% endblock %}
