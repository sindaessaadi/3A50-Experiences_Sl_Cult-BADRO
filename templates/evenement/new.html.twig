{% extends 'base.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Create New Evenement</h1>

        {# Start the form and include the CSRF token #}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {# Display form-wide errors (e.g., CSRF token errors) #}
            {{ form_errors(form) }}

            {# Render each form field individually #}
            <div class="form-group">
                {{ form_label(form.titre, 'Titre') }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group">
                {{ form_label(form.date, 'Date') }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>

            <div class="form-group">
                {{ form_label(form.heure, 'Heure') }}
                {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.heure) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lieu, 'Lieu') }}
                {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.lieu) }}
            </div>

            <div class="form-group">
                {{ form_label(form.type, 'Type') }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="form-group">
                {{ form_label(form.organisateurNom, 'Organisateur Nom') }}
                {{ form_widget(form.organisateurNom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.organisateurNom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.nombreMaxParticipants, 'Nombre Max Participants') }}
                {{ form_widget(form.nombreMaxParticipants, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nombreMaxParticipants) }}
            </div>

            <div class="form-group">
                {{ form_label(form.status, 'Status') }}
                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.status) }}
            </div>

            <div class="form-group">
                {{ form_label(form.ticketPrix, 'Ticket Prix') }}
                {{ form_widget(form.ticketPrix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.ticketPrix) }}
            </div>

            <div class="form-group">
                {{ form_label(form.periodeInscriptionFin, 'Periode Inscription Fin') }}
                {{ form_widget(form.periodeInscriptionFin, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.periodeInscriptionFin) }}
            </div>

            {# Include the CSRF token manually (optional, as form_end() includes it) #}
            {{ form_widget(form._token) }}

            {# Submit button #}
            <button type="submit" class="btn btn-primary">Save</button>

        {# End the form (this automatically includes the CSRF token) #}
        {{ form_end(form) }}
    </div>
{% endblock %}
