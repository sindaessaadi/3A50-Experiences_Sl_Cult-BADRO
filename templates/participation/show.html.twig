{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <h1 class="my-4 text-center" style="color: #0056b3;">Participation Details</h1>

        <div class="participation-details-card p-4" style="background-color: #003366; border-radius: 8px; color: white;">
            <table class="table table-borderless text-white">
                <tbody>
                    <tr>
                        <th>Id Participant</th>
                        <td>{{ participation.id }}</td>
                    </tr>
                    <tr>
                        <th>Id Event</th>
                        <td>{{ participation.idEvent }}</td>
                    </tr>
                    <tr>
                        <th>Nom Participant</th>
                        <td>{{ participation.nomParticipant }}</td>
                    </tr>
                    <tr>
                        <th>Date Inscription</th>
                        <td>{{ participation.dateInscription ? participation.dateInscription|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Evenement Nom</th>
                        <td>{{ participation.evenementNom }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('app_participation_index') }}" class="btn btn-secondary btn-sm">Back to List</a>
            {{ include('participation/_delete_form.html.twig') }}
        </div>
    </div>

    {# Custom Styles #}
    <style>
        /* General Styles */
        .container {
            margin-top: 20px;
        }

        .participation-details-card {
            background-color: #003366;
            border-radius: 8px;
            padding: 20px;
        }

        table th, table td {
            color: white;
            padding: 10px 15px;
        }

        table th {
            width: 150px;
            text-align: left;
            font-weight: bold;
        }

        table td {
            word-wrap: break-word;
        }

        .btn {
            padding: 8px 20px;
            font-size: 0.9rem;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #343a40;
        }

        h1 {
            color: #0056b3;
        }
    </style>
{% endblock %}
