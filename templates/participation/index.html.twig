{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-center" style="color: #0056b3;">Participation Index</h1>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id Participant</th>
                        <th>Id Event</th>
                        <th>Nom Participant</th>
                        <th>Date Inscription</th>
                        <th>Evenement Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for participation in participations %}
                        <tr>
                            <td>{{ participation.id }}</td>
                            <td>{{ participation.idEvent }}</td>
                            <td>{{ participation.nomParticipant }}</td>
                            <td>{{ participation.dateInscription ? participation.dateInscription|date('Y-m-d') : 'N/A' }}</td>
                            <td>{{ participation.EvenementNom }}</td>
                            <td>
                                
                                <form method="post" action="{{ path('participation_delete', {'id': participation.id}) }}" onsubmit="return confirm('Are you sure you want to cancel this ticket?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participation.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">Cancel Ticket</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No participations found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('evenement_index') }}" class="btn btn-secondary btn-sm">Back to Events</a>
        </div>
    </div>

    {# Custom Styles #}
    <style>
        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        h1 {
            color: #0056b3;
            font-size: 1.8rem;
        }

        .table-bordered {
            border: 1px solid #0056b3;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #0056b3;
            padding: 8px;
            text-align: center;
        }

        .thead-dark {
            background-color: #0056b3;
            color: white;
        }

        .btn {
            padding: 8px 25px;
            font-size: 0.95rem;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-info:hover {
            background-color: #117a8b;
            border-color: #117a8b;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #343a40;
        }

        .text-center {
            text-align: center;
        }
    </style>
{% endblock %}
